<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<style>
    .table-container {
    padding: 15px 20px;
    }

    .title {
    font-size: 25;
    font-weight: 600;
    padding-bottom: 10;
    }
    
    #customers {
      font-family: Arial, Helvetica, sans-serif;
      border-collapse: collapse;
      width: 100%;
    }
    
    #customers td, #customers th {
      border: 1px solid #ddd;
      padding: 8px;
    }
    
    #customers tr:nth-child(even){background-color: #f2f2f2;}
    
    #customers tr:hover {background-color: #ddd;}
    
    #customers th {
      padding-top: 12px;
      padding-bottom: 12px;
      text-align: left;
      background-color: #04AA6D;
      color: white;
    }
    </style>
<!-- thẻ a ứng với method get -->
<body>
    <div class="topnav">
        <a class="active" href="/">Home</a>
        <a href="/create">Create User</a>     
    </div>

    <div class="table-container">
      
      <!-- chuyen du lieu(dang Object) tu controller sang views (convert String ) -->

      <div class="title">List Users</div>
    </div>
    <table id="customers">
        <tr>
          <th>ID</th>
          <th>Email</th>
          <th>Name</th>
          <th>City</th>
          <td>Actions</td>
        </tr>
        
       <!--  <% for (let i=0; i < listUsers.length; i++) %> -->
        <% listUsers.forEach(function(user, index) { %>

          <tr>
             <td> <%= user.id %> </td>
             <td> <%= user.email %></td>
             <td> <%= user.name %></td>
             <td> <%= user.city %></td>
             <td>
               <a href="/update">Edit</a> <!-- the a ung vs method get -->
               <button>Delete</button>
             </td>
          </tr>
          
        <% }); %>.

        
      </table>
    
</body>
</html>